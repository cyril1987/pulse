# Server
PORT=3000

# Database
DB_PATH=./data/urlmonitor.db

# SMTP Configuration (Mailtrap Sandbox)
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass
SMTP_FROM=iConcile Pulse <pulse@iconcile.com>

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Microsoft OAuth 2.0 (Azure AD)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/auth/microsoft/callback
MICROSOFT_TENANT=common

# Session
SESSION_SECRET=a-random-secret-string

# Allowed emails (comma-separated, empty = allow all accounts)
ALLOWED_EMAILS=

# Monitoring
CHECK_RETENTION_DAYS=30
SCHEDULER_INTERVAL_MS=15000
FAILURES_BEFORE_ALERT=2
