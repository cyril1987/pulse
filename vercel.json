{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/cron/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/cron/(.*)", "dest": "/api/cron/$1.js" },
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/auth/(.*)", "dest": "/api/index.js" },
    { "src": "/health(.*)", "dest": "/api/index.js" },
    { "src": "/(.*\\.(html|js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|map|json))$", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ],
  "crons": [
    {
      "path": "/api/cron/monitor-check",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/task-scheduler",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/jira-sync",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 18 * * *"
    }
  ]
}
